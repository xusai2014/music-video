{
	"plugins": [
		"stylelint-prettier"
	],
	"extends": [
		"stylelint-config-standard-scss",
		"stylelint-config-prettier"
	],
	"rules": {
		"prettier/prettier": true,
		"selector-pseudo-class-no-unknown": [
			true,
			{
				"ignorePseudoClasses": [
					"export"
				]
			}
		],
		"property-no-unknown": [
			true,
			{
				"ignoreProperties": [
					"primarycolor"
				]
			}
		]
	},
	"ignoreFiles": [
		"README.md"
	]
}

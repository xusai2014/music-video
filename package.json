{
  "name": "next-site",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npm-run-all --parallel --continue-on-error lint:*",
    "lint:formatting": "prettier . --check",
    "lint:js": "next lint",
    "lint:css": "npx stylelint \"**/*.{scss,css}\"",
    "lint:types": "tsc",
    "prepare": "husky install",
    "format": "npx stylefmt"
  },
  "dependencies": {
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.5",
    "@types/react": "17.0.38",
    "autoprefixer": "^10.4.1",
    "cssnano": "^5.0.14",
    "cssnano-preset-default": "^5.1.9",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-fail-on-warn": "^0.2.1",
    "postcss-preset-env": "^7.2.0",
    "prettier": "^2.5.1",
    "sass": "^1.45.2",
    "stylefmt": "^6.0.3",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "tailwindcss": "^3.0.9",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,ts,yml}": "prettier --write"
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ]
}
